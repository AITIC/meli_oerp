<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_shipment">
					<t t-call="web.html_container">
						<t t-call="web.internal_layout">
						<!--
						<t t-if="not o and doc">
            	<t t-set="o" t-value="doc"/>
		        </t>

		        <t t-if="o and 'company_id' in o">
		            <t t-set="company" t-value="o.company_id.sudo()"/>
		        </t>
		        <t t-if="not o or not 'company_id' in o">
		            <t t-set="company" t-value="res_company"/>
		        </t>-->

						<div class="page">
							<t t-foreach="docs" t-as="o">
										<table style="width: 100%">
											<tr>
												<td style="width: 60%">
													<table style="width: 100%">
														<tr>
															<td style="width: 20%">Destinatario:</td>
															<td><span t-field="o.receiver_address_name"/></td>
														</tr>
														<tr>
															<td>Dirección:</td>
															<td><span t-field="o.receiver_address_line"/></td>
														</tr>
														<tr>
															<td colspan="2">
																<table style="width: 100%">
																	<tr>
																		<td style="width: 20%">Teléfono</td>
																		<td style="width: 30%"><span t-field="o.receiver_address_phone"/></td>
																		<td style="width: 20%">Destino</td>
																		<td style="width: 30%"><span t-field="o.receiver_city"/>,<span t-field="o.receiver_state"/>,<span t-field="o.receiver_country"/></td>
																	</tr>
																</table>
															</td>
														</tr>
														<tr>
															<td>Tipo de envío</td>
															<td style="background-color: #99FF99;"><span t-field="o.tracking_method"/></td>
														</tr>
														<tr>
															<td>Productos:</td>
															<td></td>
														</tr>
													</table>
												</td>
												<td style="width: 40%">
													Remitente:
												</td>
											</tr>
										</table>
							</t>
						</div>
						</t>
				</t>
        </template>
    </data>
</odoo>
